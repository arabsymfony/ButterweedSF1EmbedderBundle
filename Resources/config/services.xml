<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="butterweed_sf1_embedder.router_listener.class">Butterweed\SF1EmbedderBundle\EventListener\LegacyFallbackAwareRouterListener</parameter>
        <parameter key="butterweed_sf1_embedder.session_subscriber.class">Butterweed\SF1EmbedderBundle\Event\SessionSubscriber</parameter>
    </parameters>

    <services>
        <service id="butterweed_sf1_embedder.router_listener"
            class="%butterweed_sf1_embedder.router_listener.class%"
            parent="router_listener">
            <call method="setContainer"><argument type="service" id="service_container"/></call>
            <tag name="kernel.event_subscriber" />
            <tag name="monolog.logger" channel="request" />
        </service>
        <service id="butterweed_sf1_embedder.session_subscriber"
            class="%butterweed_sf1_embedder.session_subscriber.class%">
            <call method="setContainer"><argument type="service" id="service_container"/></call>
        </service>
    </services>

</container>
